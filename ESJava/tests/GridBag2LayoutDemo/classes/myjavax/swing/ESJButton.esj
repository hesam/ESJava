package myjavax.swing;

import javax.swing.*;
public class ESJButton extends JButton {

    spec protected Integer x,y,w,h;
    spec protected Integer ew,eh,iright,itop;


    public Integer x() { return this.x; }
    public Integer y() { return this.y; }
    public Integer w() { return this.w; }
    public Integer h() { return this.h; }

    public Integer ew() { return this.ew; }
    public Integer eh() { return this.eh; }
    public Integer iright() { return this.iright; }
    public Integer itop() { return this.itop; }

    public void x(Integer x) { this.x = x; setBounds(x,y,w,h); }
    public void y(Integer y) { this.y = y; setBounds(x,y,w,h); }
    public void w(Integer w) { this.w = w; setBounds(x,y,w,h); }
    public void h(Integer h) { this.h = h; setBounds(x,y,w,h); }
    public void ew(Integer w) { this.ew = w; this.w = w; }
    public void eh(Integer h) { this.eh = h; this.h = h; }
    public void iright(Integer x) { this.iright = x; }
    public void itop(Integer y) { this.itop = y; }

    public ESJButton() {
        this(null, null);
    }
    
    public ESJButton(Icon icon) {
        this(null, icon);
    }

    public ESJButton(String text) {
        this(text, null);
    }
    
    public ESJButton(Action a) {
        this();
	setAction(a);
    }

    public void setBounds(int x, int y, int width, int height) {
	reshape(x, y, width, height);
	this.x = x;
	this.y = y;
	this.w = width;
	this.h = height;
    }

    public ESJButton(String text, Icon icon) {
	super(text,icon);
    }
	
}
